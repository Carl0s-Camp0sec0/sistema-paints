# =====================================================
# VARIABLES DE ENTORNO - SISTEMA PAINTS
# Configuración para nueva base de datos
# =====================================================

# Configuración del servidor
NODE_ENV=development
PORT=3000
HOST=localhost

# Configuración de base de datos - ACTUALIZADA
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=sistema_paints_final
DB_PORT=3306

# Configuración JWT
JWT_SECRET=paints_system_secret_key_2024_very_secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de logs
LOG_LEVEL=info

# Configuración de archivos
UPLOAD_MAX_SIZE=10mb
TEMP_DIR=./temp

# Configuración de email (para futuras implementaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=sistema@paints.com

# URLs del frontend
FRONTEND_URL=http://localhost:5500
FRONTEND_LOGIN=http://localhost:5500/pages/login.html
FRONTEND_DASHBOARD=http://localhost:5500/pages/dashboard.html

# Configuración de seguridad
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,http://127.0.0.1:5500,http://localhost:5501,http://127.0.0.1:5501
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Configuración del sistema
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Límites del sistema
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=30
API_RATE_LIMIT=100

# Configuración de facturación
IVA_PERCENTAGE=12
DEFAULT_CURRENCY=GTQ
FACTURA_PREFIX=FAC
COTIZACION_PREFIX=COT

# Configuración de impresión
PDF_TEMP_DIR=./temp/pdfs
LOGO_PATH=./assets/logo.png

# =====================================================
# NOTAS:
# - Cambia DB_PASSWORD por tu contraseña de MySQL
# - Ajusta las URLs según tu configuración
# - En producción, cambia NODE_ENV a 'production'
