# =====================================================
# VARIABLES DE ENTORNO - SISTEMA PAINTS (XAMPP/MARIADB)
# Configuración simplificada y corregida para XAMPP
# =====================================================

# Configuración del servidor
NODE_ENV=development
PORT=3000
HOST=localhost

# Configuración de base de datos - XAMPP/MARIADB
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=sistema_paints_final
DB_PORT=3306

# Configuración JWT
JWT_SECRET=paints_system_secret_key_2024_very_secure
JWT_EXPIRES_IN=24h

# Configuración de logs
LOG_LEVEL=info

# URLs del frontend
FRONTEND_URL=http://localhost:5500
FRONTEND_LOGIN=http://localhost:5500/pages/login.html
FRONTEND_DASHBOARD=http://localhost:5500/pages/dashboard.html

# Configuración de seguridad
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,http://127.0.0.1:5500,http://localhost:5501,http://127.0.0.1:5501
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Configuración del sistema
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=30

# Configuración de facturación
IVA_PERCENTAGE=12
DEFAULT_CURRENCY=GTQ

# =====================================================
# NOTAS:
# - Archivo simplificado para evitar parámetros problemáticos
# - Configuración específica para XAMPP/MariaDB
