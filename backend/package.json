{
  "name": "sistema-paints-backend",
  "version": "2.0.0",
  "description": "Backend API para Sistema Paints - Proyecto Bases de Datos II - Sistema de gestión de inventario de pinturas con autenticación, facturación y control de stock",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore node_modules/",
    "dev:debug": "nodemon --inspect server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured\"",
    "build": "echo \"Build process not required for Node.js backend\"",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "db:seed": "node scripts/seedDatabase.js",
    "db:migrate": "node scripts/runMigrations.js"
  },
  "keywords": [
    "paints",
    "inventory",
    "mysql",
    "api",
    "nodejs",
    "express",
    "jwt",
    "authentication",
    "authorization",
    "facturacion",
    "stock-control",
    "sistema-paints",
    "bases-datos",
    "web-development"
  ],
  "author": {
    "name": "Estudiante UMES",
    "email": "estudiante@umes.edu.gt",
    "url": "https://github.com/tu-usuario"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/sistema-paints-backend.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sistema-paints-backend/issues"
  },
  "homepage": "https://github.com/tu-usuario/sistema-paints-backend#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mysql2": "^3.9.7",
    "pdfkit": "^0.17.2",
    "puppeteer": "^24.29.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "directories": {
    "lib": "./src",
    "doc": "./docs",
    "test": "./tests"
  },
  "files": [
    "server.js",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "*.log",
      "uploads/",
      "temp/"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "config": {
    "port": 3000,
    "db_host": "localhost",
    "db_port": 3306
  }
}
